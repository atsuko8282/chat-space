  .chat-main__message-form
    = form_with url: "#", method: :post, local: true do |form|
      .text-field
        = form.text_field :message, class: "message", placeholder: "type a message"
        %label{ class: "text-field__image", for: "message-image" }  
          = icon('far', 'image', class: 'icon')
          = form.file_field :image, id: "message-image"
      .send-button
        = form.submit "Send", class: "send"