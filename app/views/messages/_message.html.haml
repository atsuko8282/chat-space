.message-detail{data: {message: {id: message.id}}}
  .message-detail__name-date
    %p.member-name
      = message.user.name
    %p.date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-detail__message
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?