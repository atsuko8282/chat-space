.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name= current_user.name
      %p.top-items__icons
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'icon')
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .side-bar__group-list
    -current_user.groups.each do |group|
      .group
        = link_to '#' do
          %p.group__group-name
            = group.name
          %p.group__group-message
            メッセージはまだありません